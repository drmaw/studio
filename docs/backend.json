
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user's core, global profile in Digi Health, containing information that is independent of any single organization.",
      "type": "object",
      "properties": {
        "healthId": { "type": "string", "description": "A unique 10-digit user-facing identifier." },
        "name": { "type": "string", "description": "User's full name." },
        "email": { "type": "string", "format": "email" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "demographics": { "type": "object" },
        "isPremium": { "type": "boolean" },
        "status": { "type": "string", "enum": ["active", "suspended"], "description": "The current status of the user account." },
        "createdAt": { "type": "object" }
      },
      "required": ["healthId", "name", "email", "createdAt", "status"]
    },
    "Patient": {
      "title": "Patient",
      "description": "Represents supplementary, patient-specific medical data linked to a user document that is global and not organization-specific.",
      "type": "object",
      "properties": {
        "chronicConditions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of chronic medical conditions."
        },
        "allergies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of known allergies."
        },
        "redFlag": {
          "type": "object",
          "description": "A critical medical alert for the patient.",
          "properties": {
            "title": { "type": "string" },
            "comment": { "type": "string" }
          }
        },
        "createdAt": { "type": "object" }
      },
      "required": ["createdAt"]
    },
     "Organization": {
      "title": "Organization",
      "description": "Represents a healthcare organization like a hospital or clinic.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "address": { "type": "string" },
        "registrationNumber": { "type": "string" },
        "tin": { "type": "string" },
        "mobileNumber": { "type": "string" },
        "ownerId": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "suspended", "deleted"] },
        "createdAt": { "type": "object" }
      },
      "required": ["name", "ownerId", "status", "createdAt"]
    },
    "Membership": {
        "title": "Membership",
        "description": "Represents a user's affiliation with a specific organization, defining their roles and status within that context.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "userName": { "type": "string" },
            "roles": { "type": "array", "items": { "type": "string" } },
            "status": { "type": "string", "enum": ["active", "pending", "inactive"] }
        },
        "required": ["userId", "userName", "roles", "status"]
    },
    "MedicalRecord": {
      "title": "MedicalRecord",
      "description": "A single medical record for a patient, created within the context of a specific organization.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "date": { "type": "string" },
        "diagnosis": { "type": "string" },
        "notes": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "doctorId", "doctorName", "organizationId", "date", "diagnosis", "createdAt"]
    },
    "RecordFile": {
      "title": "RecordFile",
      "description": "A file (image or PDF) uploaded by a patient to their personal record.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "fileType": { "type": "string" },
        "recordType": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "size": { "type": "string" },
        "uploadedBy": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["name", "fileType", "recordType", "url", "size", "uploadedBy", "createdAt"]
    },
    "Vitals": {
        "title": "Vitals",
        "description": "A snapshot of a patient's vital signs.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "date": { "type": "string" },
            "bpSystolic": { "type": ["number", "null"] },
            "bpDiastolic": { "type": ["number", "null"] },
            "pulse": { "type": ["number", "null"] },
            "weight": { "type": ["number", "null"] },
            "rbs": { "type": ["number", "null"] },
            "sCreatinine": { "type": ["number", "null"] },
            "createdAt": { "type": "object" }
        },
        "required": ["patientId", "date", "createdAt"]
    },
    "PrivacyLog": {
        "title": "PrivacyLog",
        "description": "An audit log entry for privacy-related actions on a patient's record.",
        "type": "object",
        "properties": {
            "actorId": { "type": "string" },
            "actorName": { "type": "string" },
            "actorAvatarUrl": { "type": "string", "format": "uri" },
            "patientId": { "type": "string" },
            "organizationId": { "type": "string" },
            "action": { "type": "string" },
            "timestamp": { "type": "object" }
        },
        "required": ["actorId", "actorName", "patientId", "organizationId", "action", "timestamp"]
    },
    "RoleApplication": {
      "title": "RoleApplication",
      "description": "Represents a user's application for a role within a specific organization.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "requestedRole": { "type": "string" },
        "organizationId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "details": { "type": "object" },
        "createdAt": { "type": "object" }
      },
      "required": ["userId", "userName", "requestedRole", "organizationId", "status", "createdAt"]
    },
    "DoctorSchedule": {
      "title": "DoctorSchedule",
      "description": "Defines a doctor's schedule at a specific organization.",
      "type": "object",
      "properties": {
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "roomNumber": { "type": "string" },
        "fee": { "type": "number" },
        "days": { "type": "array", "items": { "type": "string" } },
        "startTime": { "type": "string" },
        "endTime": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["doctorId", "doctorName", "organizationId", "roomNumber", "fee", "days", "startTime", "endTime", "createdAt"]
    },
    "Appointment": {
      "title": "Appointment",
      "description": "Represents a scheduled appointment within an organization.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "scheduleId": { "type": "string" },
        "appointmentDate": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["pending", "confirmed", "cancelled", "completed"] },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "patientName", "doctorId", "doctorName", "organizationId", "scheduleId", "appointmentDate", "status", "createdAt"]
    },
    "Invoice": {
      "title": "Invoice",
      "description": "A bill for services rendered to a patient by an organization.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "organizationId": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "open", "paid", "void"] },
        "totalAmount": { "type": "number" },
        "dueDate": { "type": "string", "format": "date" },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "patientName", "organizationId", "status", "totalAmount", "createdAt"]
    },
    "InvoiceItem": {
      "title": "InvoiceItem",
      "description": "A single line item on an invoice.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "quantity": { "type": "number" },
        "unitCost": { "type": "number" },
        "totalCost": { "type": "number" },
        "createdAt": { "type": "object" }
      },
      "required": ["name", "quantity", "unitCost", "totalCost", "createdAt"]
    },
    "Admission": {
        "title": "Admission",
        "description": "Represents a patient's admission to a facility within an organization.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "organizationId": { "type": "string" },
            "facilityId": { "type": "string" },
            "admissionDate": { "type": "object" },
            "dischargeDate": { "type": "object" },
            "status": { "type": "string", "enum": ["admitted", "discharged"] }
        },
        "required": ["patientId", "organizationId", "facilityId", "admissionDate", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/entities/User" }, "description": "Top-level collection for core user profiles." }
      },
      {
        "path": "/patients/{patientId}",
        "definition": { "schema": { "$ref": "#/entities/Patient" }, "description": "Top-level collection for global patient-specific data." }
      },
       {
        "path": "/patients/{patientId}/record_files/{fileId}",
        "definition": { "schema": { "$ref": "#/entities/RecordFile" }, "description": "Subcollection for personal files uploaded by a patient." }
      },
      {
        "path": "/patients/{patientId}/vitals/{vitalId}",
        "definition": { "schema": { "$ref": "#/entities/Vitals" }, "description": "Subcollection for a patient's self-logged vital signs." }
      },
      {
        "path": "/patients/{patientId}/privacy_log/{logId}",
        "definition": { "schema": { "$ref": "#/entities/PrivacyLog" }, "description": "Subcollection for a patient's privacy audit trail." }
      },
      {
        "path": "/organizations/{organizationId}",
        "definition": { "schema": { "$ref": "#/entities/Organization" }, "description": "Top-level collection for all healthcare organizations." }
      },
      {
        "path": "/organizations/{organizationId}/members/{userId}",
        "definition": { "schema": { "$ref": "#/entities/Membership" }, "description": "Subcollection defining user roles within an organization." }
      },
      {
        "path": "/organizations/{organizationId}/schedules/{scheduleId}",
        "definition": { "schema": { "$ref": "#/entities/DoctorSchedule" }, "description": "Doctor schedules specific to an organization." }
      },
      {
        "path": "/organizations/{organizationId}/appointments/{appointmentId}",
        "definition": { "schema": { "$ref": "#/entities/Appointment" }, "description": "Appointments specific to an organization." }
      },
      {
        "path": "/organizations/{organizationId}/medical_records/{patientId}/records/{recordId}",
        "definition": { "schema": { "$ref": "#/entities/MedicalRecord" }, "description": "Medical records created by an organization for a specific patient." }
      },
      {
        "path": "/organizations/{organizationId}/role_applications/{applicationId}",
        "definition": { "schema": { "$ref": "#/entities/RoleApplication" }, "description": "Applications for roles within a specific organization." }
      },
      {
        "path": "/organizations/{organizationId}/invoices/{invoiceId}",
        "definition": { "schema": { "$ref": "#/entities/Invoice" }, "description": "Invoices generated by an organization for a patient." }
      },
      {
        "path": "/organizations/{organizationId}/invoices/{invoiceId}/items/{itemId}",
        "definition": { "schema": { "$ref": "#/entities/InvoiceItem" }, "description": "Line items for a specific invoice." }
      },
      {
        "path": "/organizations/{organizationId}/admissions/{admissionId}",
        "definition": { "schema": { "$ref": "#/entities/Admission" }, "description": "Patient admissions specific to an organization." }
      }
    ]
  }
}
