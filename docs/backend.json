
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user's core, global profile in Digi Health, containing information that is independent of any single organization.",
      "type": "object",
      "properties": {
        "healthId": { "type": "string", "description": "A unique 10-digit user-facing identifier." },
        "name": { "type": "string", "description": "User's full name." },
        "email": { "type": "string", "format": "email" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "demographics": { "type": "object" },
        "isPremium": { "type": "boolean" },
        "status": { "type": "string", "enum": ["active", "suspended"], "description": "The current status of the user account." },
        "createdAt": { "type": "object" }
      },
      "required": ["healthId", "name", "email", "createdAt", "status"]
    },
    "Patient": {
      "title": "Patient",
      "description": "Represents supplementary, patient-specific medical data linked to a user document that is global and not organization-specific.",
      "type": "object",
      "properties": {
        "chronicConditions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of chronic medical conditions."
        },
        "allergies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of known allergies."
        },
        "redFlag": {
          "type": "object",
          "description": "A critical medical alert for the patient.",
          "properties": {
            "title": { "type": "string" },
            "comment": { "type": "string" }
          }
        },
        "createdAt": { "type": "object" }
      },
      "required": ["createdAt"]
    },
     "Organization": {
      "title": "Organization",
      "description": "Represents a healthcare organization like a hospital or clinic.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "address": { "type": "string" },
        "registrationNumber": { "type": "string" },
        "tin": { "type": "string" },
        "mobileNumber": { "type": "string" },
        "ownerId": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "suspended", "deleted"] },
        "createdAt": { "type": "object" }
      },
      "required": ["name", "ownerId", "status", "createdAt"]
    },
    "Membership": {
        "title": "Membership",
        "description": "Represents a user's affiliation with a specific organization, defining their roles and status within that context.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "userName": { "type": "string" },
            "userHealthId": { "type": "string", "description": "Denormalized user-facing Health ID for faster list rendering." },
            "roles": { "type": "array", "items": { "type": "string" } },
            "status": { "type": "string", "enum": ["active", "pending", "inactive"] },
            "consent": {
                "type": "object",
                "description": "Patient's consent settings for this organization.",
                "properties": {
                    "shareRecords": { "type": "boolean", "description": "If true, the patient allows professionals from this organization to view their clinical records." }
                }
            },
            "employeeDetails": {
              "type": "object",
              "description": "Private employee-specific details, like contract and salary. Writable only by managers and owners.",
              "properties": {
                  "joiningDate": { "type": "string", "format": "date" },
                  "salary": { "type": "number" },
                  "bankAccountNumber": { "type": "string" },
                  "bankName": { "type": "string" }
              }
          }
        },
        "required": ["userId", "userName", "userHealthId", "roles", "status"]
    },
    "MedicalRecord": {
      "title": "MedicalRecord",
      "description": "A single medical record for a patient, created within the context of a specific organization.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "date": { "type": "string" },
        "diagnosis": { "type": "string" },
        "notes": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "doctorId", "doctorName", "organizationId", "date", "diagnosis", "createdAt"]
    },
    "RecordFile": {
      "title": "RecordFile",
      "description": "A file (image or PDF) uploaded by a patient to their personal record.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "fileType": { "type": "string" },
        "recordType": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "size": { "type": "string" },
        "uploadedBy": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["name", "fileType", "recordType", "url", "size", "uploadedBy", "createdAt"]
    },
    "Vitals": {
        "title": "Vitals",
        "description": "A snapshot of a patient's vital signs.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "date": { "type": "string" },
            "bpSystolic": { "type": ["number", "null"] },
            "bpDiastolic": { "type": ["number", "null"] },
            "pulse": { "type": ["number", "null"] },
            "weight": { "type": ["number", "null"] },
            "rbs": { "type": ["number", "null"] },
            "sCreatinine": { "type": ["number", "null"] },
            "createdAt": { "type": "object" }
        },
        "required": ["patientId", "date", "createdAt"]
    },
    "PrivacyLog": {
        "title": "PrivacyLog",
        "description": "An audit log entry for privacy-related actions on a patient's record.",
        "type": "object",
        "properties": {
            "actorId": { "type": "string" },
            "actorName": { "type": "string" },
            "actorAvatarUrl": { "type": "string", "format": "uri" },
            "patientId": { "type": "string" },
            "organizationId": { "type": "string" },
            "action": { "type": "string" },
            "details": { "type": "string" },
            "timestamp": { "type": "object" }
        },
        "required": ["actorId", "actorName", "patientId", "organizationId", "action", "timestamp"]
    },
    "RoleApplication": {
      "title": "RoleApplication",
      "description": "Represents a user's application for a role within a specific organization.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "requestedRole": { "type": "string" },
        "organizationId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "details": { "type": "object" },
        "createdAt": { "type": "object" }
      },
      "required": ["userId", "userName", "requestedRole", "organizationId", "status", "createdAt"]
    },
    "DoctorSchedule": {
      "title": "DoctorSchedule",
      "description": "Defines a doctor's schedule at a specific organization.",
      "type": "object",
      "properties": {
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "roomNumber": { "type": "string" },
        "fee": { "type": "number" },
        "days": { "type": "array", "items": { "type": "string" } },
        "startTime": { "type": "string" },
        "endTime": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["doctorId", "doctorName", "organizationId", "roomNumber", "fee", "days", "startTime", "endTime", "createdAt"]
    },
    "Appointment": {
      "title": "Appointment",
      "description": "Represents a scheduled appointment within an organization.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "scheduleId": { "type": "string" },
        "appointmentDate": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["pending", "confirmed", "cancelled", "completed"] },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "patientName", "doctorId", "doctorName", "organizationId", "scheduleId", "appointmentDate", "status", "createdAt"]
    },
    "Invoice": {
      "title": "Invoice",
      "description": "A bill for services rendered to a patient by an organization.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "organizationId": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "open", "paid", "void"] },
        "totalAmount": { "type": "number" },
        "dueDate": { "type": "string", "format": "date" },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "patientName", "organizationId", "status", "totalAmount", "createdAt"]
    },
    "InvoiceItem": {
      "title": "InvoiceItem",
      "description": "A single line item on an invoice.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "quantity": { "type": "number" },
        "unitCost": { "type": "number" },
        "totalCost": { "type": "number" },
        "createdAt": { "type": "object" }
      },
      "required": ["name", "quantity", "unitCost", "totalCost", "createdAt"]
    },
    "Admission": {
        "title": "Admission",
        "description": "Represents a patient's admission to a facility within an organization.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "patientName": { "type": "string" },
            "organizationId": { "type": "string" },
            "facilityId": { "type": "string" },
            "facilityName": { "type": "string" },
            "bedId": { "type": "string" },
            "facilityCostPerDay": { "type": "number" },
            "admissionDate": { "type": "object" },
            "dischargeDate": { "type": "object" },
            "status": { "type": "string", "enum": ["admitted", "discharged"] }
        },
        "required": ["patientId", "patientName", "organizationId", "facilityId", "facilityName", "bedId", "admissionDate", "status"]
    },
    "LabTestOrder": {
      "title": "LabTestOrder",
      "description": "An order for one or more laboratory tests for a patient.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "tests": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string", "enum": ["pending", "completed", "cancelled"] },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "patientName", "doctorId", "organizationId", "tests", "status", "createdAt"]
    },
    "LabTestResult": {
      "title": "LabTestResult",
      "description": "The result of a single laboratory test, part of a larger order.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "organizationId": { "type": "string" },
        "testName": { "type": "string" },
        "resultValue": { "type": "string" },
        "comments": { "type": "string" },
        "reportedById": { "type": "string" },
        "reportedByName": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "organizationId", "testName", "resultValue", "reportedById", "createdAt"]
    },
    "Conversation": {
      "title": "Conversation",
      "description": "Represents a secure messaging conversation between two or more users.",
      "type": "object",
      "properties": {
        "participants": { "type": "array", "items": { "type": "string" }, "description": "Array of user UIDs." },
        "participantNames": { "type": "array", "items": { "type": "string" } },
        "lastMessage": {
          "type": "object",
          "properties": {
            "text": { "type": "string" },
            "timestamp": { "type": "object" }
          }
        },
        "createdAt": { "type": "object" },
        "updatedAt": { "type": "object" }
      },
      "required": ["participants", "participantNames", "createdAt", "updatedAt"]
    },
    "Message": {
      "title": "Message",
      "description": "A single message within a conversation.",
      "type": "object",
      "properties": {
        "conversationId": { "type": "string" },
        "senderId": { "type": "string" },
        "senderName": { "type": "string" },
        "text": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["conversationId", "senderId", "senderName", "text", "createdAt"]
    },
    "Bed": {
      "title": "Bed",
      "description": "Represents a single bed within a facility.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "status": { "type": "string", "enum": ["available", "occupied", "maintenance"] },
        "patientId": { "type": "string", "description": "The ID of the patient occupying the bed." },
        "patientName": { "type": "string", "description": "Denormalized name of the patient for UI." }
      },
      "required": ["id", "status"]
    },
    "Facility": {
      "title": "Facility",
      "description": "Represents an in-patient facility like a ward or a cabin in a hospital.",
      "type": "object",
      "properties": {
        "organizationId": { "type": "string" },
        "type": { "type": "string", "enum": ["ward", "cabin"] },
        "name": { "type": "string" },
        "totalBeds": { "type": "number" },
        "beds": {
          "type": "object",
          "description": "A map of bed objects within the facility, keyed by bed number.",
          "additionalProperties": { "$ref": "#/entities/Bed" }
        },
        "costPerDay": { "type": "number" },
        "createdAt": { "type": "object" }
      },
      "required": ["organizationId", "type", "name", "totalBeds", "costPerDay", "createdAt"]
    },
    "InventoryItem": {
      "title": "InventoryItem",
      "description": "Represents a single stock item in the hospital's general inventory.",
      "type": "object",
      "properties": {
        "organizationId": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string" },
        "quantity": { "type": "number" },
        "reorderLevel": { "type": "number" },
        "unit": { "type": "string", "description": "e.g., boxes, units, ml" },
        "location": { "type": "string", "description": "e.g., Main Store, Pharmacy" },
        "updatedAt": { "type": "object" }
      },
      "required": ["organizationId", "name", "category", "quantity", "reorderLevel", "unit", "updatedAt"]
    },
    "StockLog": {
      "title": "StockLog",
      "description": "An audit trail entry for any change in stock quantity of an inventory item.",
      "type": "object",
      "properties": {
        "itemId": { "type": "string" },
        "itemName": { "type": "string" },
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "changeType": { "type": "string", "enum": ["add", "remove", "adjustment"] },
        "quantityChanged": { "type": "number" },
        "reason": { "type": "string" },
        "timestamp": { "type": "object" }
      },
      "required": ["itemId", "itemName", "userId", "userName", "changeType", "quantityChanged", "timestamp"]
    },
    "Settlement": {
      "title": "Settlement",
      "description": "Represents a hand-off of cash from a manager/cashier to the hospital owner for auditing.",
      "type": "object",
      "properties": {
        "organizationId": { "type": "string" },
        "managerId": { "type": "string" },
        "managerName": { "type": "string" },
        "ownerId": { "type": "string" },
        "amount": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "confirmed"] },
        "initiatedAt": { "type": "object" },
        "confirmedAt": { "type": "object" }
      },
      "required": ["organizationId", "managerId", "managerName", "ownerId", "amount", "status", "initiatedAt"]
    },
    "DutyRoster": {
      "title": "DutyRoster",
      "description": "Represents a single shift assignment for a staff member on a specific date.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "shiftType": { "type": "string", "enum": ["Morning", "Evening", "Night"] },
        "dutyArea": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["userId", "userName", "date", "shiftType", "dutyArea", "createdAt"]
    },
    "PlatformStats": {
      "title": "PlatformStats",
      "description": "Pre-aggregated statistics for the entire platform, updated by backend processes.",
      "type": "object",
      "properties": {
        "totalUsers": { "type": "number" },
        "totalDoctors": { "type": "number" },
        "totalOrganizations": { "type": "number" },
        "totalAppointments": { "type": "number" },
        "pendingAppointments": { "type": "number" },
        "updatedAt": { "type": "object" }
      },
      "required": ["updatedAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/entities/User" }, "description": "Top-level collection for core user profiles." }
      },
      {
        "path": "/patients/{patientId}",
        "definition": { "schema": { "$ref": "#/entities/Patient" }, "description": "Top-level collection for global patient-specific data." }
      },
       {
        "path": "/patients/{patientId}/record_files/{fileId}",
        "definition": { "schema": { "$ref": "#/entities/RecordFile" }, "description": "Subcollection for personal files uploaded by a patient." }
      },
      {
        "path": "/patients/{patientId}/vitals/{vitalId}",
        "definition": { "schema": { "$ref": "#/entities/Vitals" }, "description": "Subcollection for a patient's self-logged vital signs." }
      },
      {
        "path": "/patients/{patientId}/privacy_log/{logId}",
        "definition": { "schema": { "$ref": "#/entities/PrivacyLog" }, "description": "Subcollection for a patient's privacy audit trail." }
      },
      {
        "path": "/organizations/{organizationId}",
        "definition": { "schema": { "$ref": "#/entities/Organization" }, "description": "Top-level collection for all healthcare organizations." }
      },
      {
        "path": "/organizations/{organizationId}/members/{userId}",
        "definition": { "schema": { "$ref": "#/entities/Membership" }, "description": "Subcollection defining user roles within an organization." }
      },
      {
        "path": "/organizations/{organizationId}/schedules/{scheduleId}",
        "definition": { "schema": { "$ref": "#/entities/DoctorSchedule" }, "description": "Doctor schedules specific to an organization." }
      },
      {
        "path": "/organizations/{organizationId}/appointments/{appointmentId}",
        "definition": { "schema": { "$ref": "#/entities/Appointment" }, "description": "Appointments specific to an organization." }
      },
      {
        "path": "/organizations/{organizationId}/medical_records/{patientId}/records/{recordId}",
        "definition": { "schema": { "$ref": "#/entities/MedicalRecord" }, "description": "Medical records created by an organization for a specific patient." }
      },
      {
        "path": "/organizations/{organizationId}/role_applications/{applicationId}",
        "definition": { "schema": { "$ref": "#/entities/RoleApplication" }, "description": "Applications for roles within a specific organization." }
      },
      {
        "path": "/organizations/{organizationId}/invoices/{invoiceId}",
        "definition": { "schema": { "$ref": "#/entities/Invoice" }, "description": "Invoices generated by an organization for a patient." }
      },
      {
        "path": "/organizations/{organizationId}/invoices/{invoiceId}/items/{itemId}",
        "definition": { "schema": { "$ref": "#/entities/InvoiceItem" }, "description": "Line items for a specific invoice." }
      },
      {
        "path": "/organizations/{organizationId}/admissions/{admissionId}",
        "definition": { "schema": { "$ref": "#/entities/Admission" }, "description": "Patient admissions specific to an organization." }
      },
      {
        "path": "/organizations/{organizationId}/lab_test_orders/{orderId}",
        "definition": { "schema": { "$ref": "#/entities/LabTestOrder" }, "description": "Laboratory test orders for patients within an organization." }
      },
      {
        "path": "/organizations/{organizationId}/lab_test_orders/{orderId}/results/{resultId}",
        "definition": { "schema": { "$ref": "#/entities/LabTestResult" }, "description": "Results for a specific laboratory test order." }
      },
      {
        "path": "/organizations/{organizationId}/conversations/{conversationId}",
        "definition": { "schema": { "$ref": "#/entities/Conversation" }, "description": "Secure messaging conversations within an organization." }
      },
      {
        "path": "/organizations/{organizationId}/conversations/{conversationId}/messages/{messageId}",
        "definition": { "schema": { "$ref": "#/entities/Message" }, "description": "Individual messages within a conversation." }
      },
      {
        "path": "/organizations/{organizationId}/facilities/{facilityId}",
        "definition": { "schema": { "$ref": "#/entities/Facility" }, "description": "In-patient facilities like wards and cabins managed by an organization." }
      },
      {
        "path": "/organizations/{organizationId}/inventory/{itemId}",
        "definition": { "schema": { "$ref": "#/entities/InventoryItem" }, "description": "General inventory items managed by an organization." }
      },
      {
        "path": "/organizations/{organizationId}/inventory/{itemId}/stock_logs/{logId}",
        "definition": { "schema": { "$ref": "#/entities/StockLog" }, "description": "Audit log for stock changes of an inventory item." }
      },
      {
        "path": "/organizations/{organizationId}/settlements/{settlementId}",
        "definition": { "schema": { "$ref": "#/entities/Settlement" }, "description": "Collection for tracking cash settlements between staff and owners." }
      },
      {
        "path": "/organizations/{organizationId}/rosters/{rosterId}",
        "definition": { "schema": { "$ref": "#/entities/DutyRoster" }, "description": "Subcollection for storing individual staff shift assignments." }
      },
      {
        "path": "/stats/platform",
        "definition": { "schema": { "$ref": "#/entities/PlatformStats" }, "description": "Singleton document for global platform statistics." }
      }
    ]
  },
  "fhir": {
    "description": "Defines mappings from Digi Health's internal data models to standard FHIR (Fast Healthcare Interoperability Resources) R4 resources. This enables data interoperability with other healthcare systems.",
    "resourceMappings": {
      "Patient": {
        "description": "Maps the combination of Digi Health's User and Patient entities to the FHIR Patient resource.",
        "sourceEntities": ["User", "Patient"],
        "fhirResource": "Patient",
        "fieldMappings": [
          { "source": "User.healthId", "fhirPath": "Patient.identifier[?(@.system=='urn:system:digi-health-id')].value", "description": "Maps the internal Health ID to a FHIR identifier." },
          { "source": "User.name", "fhirPath": "Patient.name[0].text", "description": "Maps user's full name." },
          { "source": "User.demographics.gender", "fhirPath": "Patient.gender", "description": "Maps gender." },
          { "source": "User.demographics.dob", "fhirPath": "Patient.birthDate", "description": "Maps date of birth." },
          { "source": "User.demographics.mobileNumber", "fhirPath": "Patient.telecom[?(@.system=='phone')].value", "description": "Maps mobile number." },
          { "source": "User.email", "fhirPath": "Patient.telecom[?(@.system=='email')].value", "description": "Maps email address." }
        ]
      },
      "Observation": {
        "description": "Maps Digi Health's MedicalRecord entity to the FHIR Observation resource, representing a clinical diagnosis.",
        "sourceEntities": ["MedicalRecord"],
        "fhirResource": "Observation",
        "fieldMappings": [
          { "source": "MedicalRecord.id", "fhirPath": "Observation.identifier[?(@.system=='urn:system:digi-health-record-id')].value", "description": "Maps the internal record ID." },
          { "source": "MedicalRecord.diagnosis (ICD-10 Code)", "fhirPath": "Observation.code.coding[?(@.system=='http://hl7.org/fhir/sid/icd-10')].code", "description": "Extracts the ICD-10 code from the diagnosis string." },
          { "source": "MedicalRecord.diagnosis (Description)", "fhirPath": "Observation.code.text", "description": "Extracts the diagnosis description." },
          { "source": "MedicalRecord.date", "fhirPath": "Observation.effectiveDateTime", "description": "Maps the record's date." },
          { "source": "MedicalRecord.patientId", "fhirPath": "Observation.subject.reference", "description": "Links to the FHIR Patient resource, formatted as 'Patient/{patientId}'." },
          { "source": "MedicalRecord.doctorId", "fhirPath": "Observation.performer[0].reference", "description": "Links to a FHIR Practitioner resource, formatted as 'Practitioner/{doctorId}'." },
