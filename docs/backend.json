{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user profile in Digi Health.",
      "type": "object",
      "properties": {
        "healthId": { "type": "string", "description": "A unique 10-digit user-facing identifier." },
        "name": { "type": "string", "description": "User's full name." },
        "email": { "type": "string", "format": "email" },
        "roles": { "type": "array", "items": { "type": "string" } },
        "organizationId": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "demographics": { "type": "object" },
        "isPremium": { "type": "boolean" },
        "createdAt": { "type": "object" }
      },
      "required": ["healthId", "name", "email", "roles", "organizationId", "createdAt"]
    },
    "Patient": {
      "title": "Patient",
      "description": "Represents a patient's core record, linked to a user.",
      "type": "object",
      "properties": {
        "healthId": { "type": "string", "description": "A unique 10-digit user-facing identifier." },
        "userId": { "type": "string", "description": "Links to the User document ID (Firebase UID)." },
        "name": { "type": "string" },
        "organizationId": { "type": "string" },
        "demographics": { "type": "object" },
        "chronicConditions": { "type": "array", "items": { "type": "string" } },
        "allergies": { "type": "array", "items": { "type": "string" } },
        "redFlag": { "type": "object" },
        "createdAt": { "type": "object" }
      },
      "required": ["healthId", "userId", "name", "organizationId", "createdAt"]
    },
    "MedicalRecord": {
      "title": "MedicalRecord",
      "description": "A single medical record for a patient.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "date": { "type": "string" },
        "diagnosis": { "type": "string" },
        "notes": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "doctorId", "doctorName", "organizationId", "date", "diagnosis", "createdAt"]
    },
    "RecordFile": {
      "title": "RecordFile",
      "description": "A file (image or PDF) uploaded by a user.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "fileType": { "type": "string" },
        "recordType": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "size": { "type": "string" },
        "uploadedBy": { "type": "string" },
        "uploaderName": { "type": "string" },
        "patientId": { "type": "string" },
        "organizationId": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["name", "fileType", "recordType", "url", "size", "uploadedBy", "uploaderName", "patientId", "organizationId", "createdAt"]
    },
    "Vitals": {
        "title": "Vitals",
        "description": "A snapshot of a patient's vital signs.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "organizationId": { "type": "string" },
            "date": { "type": "string" },
            "bpSystolic": { "type": ["number", "null"] },
            "bpDiastolic": { "type": ["number", "null"] },
            "pulse": { "type": ["number", "null"] },
            "weight": { "type": ["number", "null"] },
            "rbs": { "type": ["number", "null"] },
            "sCreatinine": { "type": ["number", "null"] },
            "createdAt": { "type": "object" }
        },
        "required": ["patientId", "organizationId", "date", "createdAt"]
    },
    "PrivacyLog": {
        "title": "PrivacyLog",
        "description": "An audit log entry for privacy-related actions.",
        "type": "object",
        "properties": {
            "actorId": { "type": "string" },
            "actorName": { "type": "string" },
            "actorAvatarUrl": { "type": "string", "format": "uri" },
            "patientId": { "type": "string" },
            "organizationId": { "type": "string" },
            "action": { "type": "string" },
            "timestamp": { "type": "object" }
        },
        "required": ["actorId", "actorName", "patientId", "organizationId", "action", "timestamp"]
    },
    "RoleApplication": {
      "title": "RoleApplication",
      "description": "Represents a user's application for an additional role.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "requestedRole": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "details": { "type": "object" },
        "reason": { "type": "string", "description": "The reason for the application's status (e.g., rejection)." },
        "createdAt": { "type": "object" },
        "reviewedAt": { "type": "object" }
      },
      "required": ["userId", "userName", "requestedRole", "status", "createdAt"]
    },
    "RoleRemovalRequest": {
      "title": "RoleRemovalRequest",
      "description": "Represents a user's request to have a professional role removed.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "roleToRemove": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "createdAt": { "type": "object" },
        "reviewedAt": { "type": "object" }
      },
      "required": ["userId", "userName", "roleToRemove", "status", "createdAt"]
    },
    "DoctorSchedule": {
      "title": "DoctorSchedule",
      "description": "Defines a doctor's schedule at a specific chamber in an organization.",
      "type": "object",
      "properties": {
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "organizationName": { "type": "string" },
        "roomNumber": { "type": "string" },
        "fee": { "type": "number" },
        "days": { "type": "array", "items": { "type": "string" } },
        "startTime": { "type": "string" },
        "endTime": { "type": "string" }
      },
      "required": ["doctorId", "doctorName", "organizationId", "organizationName", "roomNumber", "fee", "days", "startTime", "endTime"]
    },
    "Appointment": {
      "title": "Appointment",
      "description": "Represents a scheduled appointment between a patient and a doctor.",
      "type": "object",
      "properties": {
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "organizationId": { "type": "string" },
        "organizationName": { "type": "string" },
        "scheduleId": { "type": "string" },
        "appointmentDate": { "type": "string", "format": "date" },
        "appointmentTime": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "confirmed", "cancelled", "completed"] },
        "reason": { "type": "string" },
        "createdAt": { "type": "object" }
      },
      "required": ["patientId", "patientName", "doctorId", "doctorName", "organizationId", "organizationName", "scheduleId", "appointmentDate", "status", "createdAt"]
    },
    "FeeItem": {
      "title": "FeeItem",
      "description": "Represents a single billable item in an organization's price chart.",
      "type": "object",
      "properties": {
        "organizationId": { "type": "string" },
        "category": { "type": "string", "enum": ["investigation", "admission", "doctor_fee", "procedure"] },
        "name": { "type": "string" },
        "cost": { "type": "number" },
        "createdAt": { "type": "object" }
      },
      "required": ["organizationId", "category", "name", "cost", "createdAt"]
    },
    "Facility": {
      "title": "Facility",
      "description": "Represents a single facility like a ward or cabin in an organization.",
      "type": "object",
      "properties": {
        "organizationId": { "type": "string" },
        "type": { "type": "string", "enum": ["ward", "cabin"] },
        "name": { "type": "string" },
        "beds": { "type": "number" },
        "cost": { "type": "number" },
        "createdAt": { "type": "object" }
      },
      "required": ["organizationId", "type", "name", "beds", "cost", "createdAt"]
    },
    "Notification": {
      "title": "Notification",
      "description": "Represents a user notification.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "href": { "type": "string", "format": "uri" },
        "isRead": { "type": "boolean" },
        "createdAt": { "type": "object" }
      },
      "required": ["userId", "title", "description", "isRead", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/entities/User" }, "description": "Top-level collection for all user profiles, where {userId} is the Firebase Auth UID." }
      },
      {
        "path": "/users/{userId}/role_applications/{applicationId}",
        "definition": { "schema": { "$ref": "#/entities/RoleApplication" }, "description": "Subcollection for a user's role applications." }
      },
      {
        "path": "/users/{userId}/role_removal_requests/{requestId}",
        "definition": { "schema": { "$ref": "#/entities/RoleRemovalRequest" }, "description": "Subcollection for a user's role removal requests." }
      },
      {
        "path": "/users/{userId}/notifications/{notificationId}",
        "definition": { "schema": { "$ref": "#/entities/Notification" }, "description": "Subcollection for user notifications." }
      },
      {
        "path": "/patients/{patientId}",
        "definition": { "schema": { "$ref": "#/entities/Patient" }, "description": "Top-level collection for all patient records, where {patientId} is the Firebase Auth UID." }
      },
      {
        "path": "/patients/{patientId}/medical_records/{recordId}",
        "definition": { "schema": { "$ref": "#/entities/MedicalRecord" }, "description": "Subcollection for a patient's medical records." }
      },
      {
        "path": "/patients/{patientId}/record_files/{fileId}",
        "definition": { "schema": { "$ref": "#/entities/RecordFile" }, "description": "Subcollection for files uploaded by a patient." }
      },
      {
        "path": "/patients/{patientId}/vitals/{vitalId}",
        "definition": { "schema": { "$ref": "#/entities/Vitals" }, "description": "Subcollection for a patient's vital signs history." }
      },
      {
        "path": "/patients/{patientId}/privacy_log/{logId}",
        "definition": { "schema": { "$ref": "#/entities/PrivacyLog" }, "description": "Subcollection for a patient's privacy audit trail." }
      },
      {
        "path": "/organizations/{organizationId}/schedules/{scheduleId}",
        "definition": { "schema": { "$ref": "#/entities/DoctorSchedule" }, "description": "Subcollection for an organization's doctor schedules." }
      },
      {
        "path": "/organizations/{organizationId}/fee_items/{feeItemId}",
        "definition": { "schema": { "$ref": "#/entities/FeeItem" }, "description": "Subcollection for an organization's price chart items." }
      },
      {
        "path": "/organizations/{organizationId}/facilities/{facilityId}",
        "definition": { "schema": { "$ref": "#/entities/Facility" }, "description": "Subcollection for an organization's facilities like wards and cabins." }
      },
      {
        "path": "/appointments/{appointmentId}",
        "definition": { "schema": { "$ref": "#/entities/Appointment" }, "description": "Top-level collection for all appointments." }
      }
    ]
  }
}
