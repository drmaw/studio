
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile pictures
    match /profile_pictures/{userId} {
      // Allow anyone to read profile pictures (they are public)
      allow read;

      // Allow a user to create, update, or delete their own profile picture
      // The user must be authenticated (request.auth != null)
      // The user's ID must match the {userId} in the file path
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for record files uploaded by patients
    match /record_files/{userId}/{fileName} {
        // The user must be authenticated
        // The user's ID must match the {userId} in the file path
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
