
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function getPatientOrgId(patientId) {
        return get(/databases/$(database)/documents/patients/$(patientId)).data.organizationId;
    }
    
    function isRole(role) {
        return isSignedIn() && role in getUserData().roles;
    }

    function isInOrg(orgId) {
        return isSignedIn() && getUserData().organizationId == orgId;
    }

    // User Profiles
    match /users/{userId} {
      // Users can read and update their own profile. Create is handled by register logic.
      allow read, update: if isOwner(userId);
      allow create: if isSignedIn();
      // Authenticated users can list other users (e.g., for searching by Health ID).
      allow list: if isSignedIn();
    }

    // Patient Records
    match /patients/{patientId} {
      // A patient can read their own record.
      allow get: if isOwner(patientId);
      // A doctor in the same organization can read/update a patient's record.
      allow get, update: if isRole('doctor') && isInOrg(resource.data.organizationId);
       // Allow creation during registration
      allow create: if isOwner(patientId);
    }
    
    // Patient Subcollections
    match /patients/{patientId}/medical_records/{recordId} {
        // Patient can read their own records.
        allow get, list: if isOwner(patientId);
        // Doctor in the patient's org can read, create, and update records.
        allow get, list, create, update: if isRole('doctor') && isInOrg(getPatientOrgId(patientId));
    }

    match /patients/{patientId}/record_files/{fileId} {
        // Patient can do anything with their own files.
        allow read, write: if isOwner(patientId);
        // Doctor in patient's org can read them.
        allow get, list: if isRole('doctor') && isInOrg(getPatientOrgId(patientId));
    }

    match /patients/{patientId}/vitals/{vitalId} {
        // Patient can create and read their own vitals.
        allow create, get, list: if isOwner(patientId);
        // Doctors in patient's org can read vitals.
        allow get, list: if isRole('doctor') && isInOrg(getPatientOrgId(patientId));
        // Vitals are immutable.
        allow update, delete: if false;
    }

    match /patients/{patientId}/privacy_log/{logId} {
        // ONLY the patient can read their log.
        allow get, list: if isOwner(patientId);
        // A doctor can create a log entry (when searching/viewing).
        allow create: if isRole('doctor');
    }
    
    // Organization Data
    match /organizations/{orgId}/{collection}/{docId} {
        // Only a hospital owner or manager of that specific org can manage its subcollections.
        allow read, write: if isInOrg(orgId) && (isRole('hospital_owner') || isRole('manager'));
        // Any signed-in user can read schedules (for booking appointments)
        allow get, list: if collection == 'schedules' && isSignedIn();
    }
    
    // Appointments
    match /appointments/{appointmentId} {
        // Patient can create their own appointment.
        allow create: if isOwner(request.resource.data.patientId);
        // Patient can read/update their own appointments. Doctor can read/update their appointments.
        allow get, update: if isOwner(resource.data.patientId) || (isDoctor() && request.auth.uid == resource.data.doctorId);
        // Authenticated users can list appointments (queries must be secured on client).
        allow list: if isSignedIn();
    }
    
    // Role Management
    match /users/{userId}/role_applications/{applicationId} {
        // A user can create and read their own applications.
        allow read, create: if isOwner(userId);
        // Admin approval logic would go here. For now, deny updates.
        allow update: if false; 
    }
    
    match /users/{userId}/role_removal_requests/{requestId} {
        // A user can create and read their own requests.
        allow read, create: if isOwner(userId);
        allow update: if false;
    }
  }
}
