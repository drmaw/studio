
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getMembership(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(request.auth.uid));
    }
    
    function hasRoleInOrg(orgId, role) {
      return isSignedIn() && getMembership(orgId).data.roles.hasAny([role, 'hospital_owner', 'manager', 'admin']);
    }

    function isMemberOfOrg(orgId) {
      return isSignedIn() && exists(/databases/$(database)/documents/organizations/$(orgId)/members/$(request.auth.uid));
    }

    // --- GLOBAL COLLECTIONS ---

    // User profiles are global and self-managed.
    match /users/{userId} {
      allow create: if isSignedIn();
      allow read, update: if isOwner(userId);
      // Only admins can list/delete all users.
      allow list, delete: if hasRoleInOrg('digihealth-admin', 'admin'); 
    }

    // Patient data (allergies, conditions) is global and self-managed.
    match /patients/{patientId} {
      allow create, update: if isOwner(patientId);
      // A patient can read their own data.
      // A professional can read patient data IF they are a member of an organization.
      // This allows a doctor to look up a patient before they are associated with their hospital.
      allow get: if isOwner(patientId) || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.length > 1);
    }

    // Patient-owned files (prescriptions, reports). Only the patient can manage these.
    match /patients/{patientId}/record_files/{fileId} {
      allow read, write: if isOwner(patientId);
    }
    
    // Self-logged vitals. Only the patient can add. Doctors can read.
    match /patients/{patientId}/vitals/{vitalId} {
      allow create: if isOwner(patientId);
      allow read: if isOwner(patientId) || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.length > 1);
    }
    
    // Privacy log is strictly read-only for the patient themselves.
    // Professionals will write to this log via organization-specific rules.
    match /patients/{patientId}/privacy_log/{logId} {
      allow get, list: if isOwner(patientId);
      allow create: if isSignedIn(); // Log creation is allowed if signed in, content is validated by function triggers or secure backend.
    }

    // --- ORGANIZATION-SCOPED COLLECTIONS ---

    // Any signed-in user can read basic organization info (for search/booking).
    // Only the owner on the resource can update it.
    match /organizations/{orgId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.ownerId);
      allow update: if isOwner(resource.data.ownerId);
    }

    // Membership defines a user's role within an org. Can only be managed by an org owner.
    match /organizations/{orgId}/members/{userId} {
      allow read: if isMemberOfOrg(orgId);
      allow write: if hasRoleInOrg(orgId, 'hospital_owner');
    }

    // Medical records are created BY an organization FOR a patient.
    // Patient can read their records from any org.
    // Only doctors within THAT org can create/update records.
    match /organizations/{orgId}/medical_records/{patientId}/records/{recordId} {
      allow read: if isOwner(patientId) || hasRoleInOrg(orgId, 'doctor');
      allow write: if hasRoleInOrg(orgId, 'doctor');
    }

    // Appointments are managed within an org.
    // Patients can read their own, staff can manage all within their org.
    match /organizations/{orgId}/appointments/{appointmentId} {
      allow create: if isMemberOfOrg(orgId);
      allow read, update: if isOwner(resource.data.patientId) || hasRoleInOrg(orgId, 'front_desk');
    }
    
    // Invoices are managed within an org.
    // Patients can read their own, staff can manage all within their org.
    match /organizations/{orgId}/invoices/{invoiceId} {
        allow read: if isOwner(resource.data.patientId) || hasRoleInOrg(orgId, 'manager');
        allow write: if hasRoleInOrg(orgId, 'manager');

        // Rules for invoice line items
        match /items/{itemId} {
            allow read: if isOwner(get(parent).data.patientId) || hasRoleInOrg(orgId, 'manager');
            allow write: if hasRoleInOrg(orgId, 'manager');
        }
    }
    
    // Admissions are managed within an org.
    // Patients can read their own admission status. Staff can manage all.
    match /organizations/{orgId}/admissions/{admissionId} {
      allow read: if isOwner(resource.data.patientId) || isMemberOfOrg(orgId);
      allow write: if hasRoleInOrg(orgId, 'manager') || hasRoleInOrg(orgId, 'nurse');
    }

    // Schedules, facilities, and fees are managed by org owners/managers.
    // Any member of the org can read them.
    match /organizations/{orgId}/schedules/{docId} {
        allow read: if isMemberOfOrg(orgId);
        allow write: if hasRoleInOrg(orgId, 'hospital_owner');
    }
    match /organizations/{orgId}/facilities/{docId} {
        allow read: if isMemberOfOrg(orgId);
        allow write: if hasRoleInOrg(orgId, 'hospital_owner');
    }
     match /organizations/{orgId}/fee_items/{docId} {
        allow read: if isMemberOfOrg(orgId);
        allow write: if hasRoleInOrg(orgId, 'hospital_owner');
    }

    // Role applications are managed within the context of an organization.
    match /organizations/{orgId}/role_applications/{applicationId} {
      allow create: if isSignedIn(); // Any user can apply to an org.
      allow read, update: if hasRoleInOrg(orgId, 'hospital_owner'); // Only owners can manage applications.
    }
  }
}
