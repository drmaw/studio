
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function getUserOrgId(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.organizationId;
    }
    
    function isRole(role) {
        return isSignedIn() && role in getUserData().roles;
    }
    
    function isAdmin() {
        return isRole('admin');
    }

    function isInOrg(orgId) {
        return isSignedIn() && getUserData().organizationId == orgId;
    }
    
    // User Profiles
    match /users/{userId} {
      allow create: if isSignedIn();
      allow get: if isOwner(userId) || isRole('doctor') || isAdmin();
      allow list: if isRole('doctor') || isRole('hospital_owner') || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Patient Records
    match /patients/{patientId} {
      allow get: if isOwner(patientId) || (isRole('doctor') && isInOrg(getUserOrgId(patientId))) || isAdmin();
      allow update: if isOwner(patientId) || (isRole('doctor') && isInOrg(getUserOrgId(patientId))) || isAdmin();
      allow create: if isOwner(patientId);
    }
    
    // Patient Subcollections
    match /patients/{patientId}/medical_records/{recordId} {
        allow get, list: if isOwner(patientId) || (isRole('doctor') && isInOrg(getUserOrgId(patientId))) || isAdmin();
        allow create, update: if isRole('doctor') && isInOrg(getUserOrgId(patientId));
    }

    match /patients/{patientId}/record_files/{fileId} {
        allow read, write: if isOwner(patientId);
        allow get, list: if (isRole('doctor') && isInOrg(getUserOrgId(patientId))) || isAdmin();
    }

    match /patients/{patientId}/vitals/{vitalId} {
        allow create, get, list: if isOwner(patientId);
        allow get, list: if (isRole('doctor') && isInOrg(getUserOrgId(patientId))) || isAdmin();
        allow update, delete: if false;
    }

    match /patients/{patientId}/privacy_log/{logId} {
        allow get, list: if isOwner(patientId);
        allow create: if isRole('doctor');
    }
    
    // Organization Data
    match /organizations/{orgId} {
        allow read, write: if isAdmin();
    }
    
    match /organizations/{orgId}/{collection}/{docId} {
        allow read, write: if (isInOrg(orgId) && (isRole('hospital_owner') || isRole('manager'))) || isAdmin();
        allow get, list: if collection == 'schedules' && isSignedIn();
    }
    
    // Appointments
    match /appointments/{appointmentId} {
        allow create: if isOwner(request.resource.data.patientId);
        allow read, update: if isOwner(resource.data.patientId) || (isRole('doctor') && request.auth.uid == resource.data.doctorId) || isAdmin();
        allow list: if isSignedIn();
    }
    
    // Role Management
    match /users/{userId}/role_applications/{applicationId} {
        allow read, create: if isOwner(userId);
        allow update: if isAdmin(); 
    }
    
    match /users/{userId}/role_removal_requests/{requestId} {
        allow read, create: if isOwner(userId);
        allow update: if isAdmin();
    }

    // Collection group queries for admins
    match /{path=**}/role_applications/{applicationId} {
      allow list: if isAdmin();
    }

     match /{path=**}/role_removal_requests/{requestId} {
      allow list: if isAdmin();
    }
     
     match /{path=**}/appointments/{appointmentId} {
      allow list: if isAdmin();
    }
     
     match /{path=**}/privacy_log/{logId} {
       allow list: if isAdmin();
     }
    
    // Notifications
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }
  }
}
