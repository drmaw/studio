
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow any authenticated user full read/write access to all documents.
    // This is a very permissive rule for development purposes.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
