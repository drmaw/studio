
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getMembership(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(request.auth.uid));
    }

    function getPatientMembership(orgId, patientId) {
        return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(patientId));
    }
    
    function hasRoleInOrg(orgId, role) {
      return isSignedIn() && getMembership(orgId).data.roles.hasAny([role, 'hospital_owner', 'manager', 'admin']);
    }

    function isMemberOfOrg(orgId) {
      return isSignedIn() && exists(/databases/$(database)/documents/organizations/$(orgId)/members/$(request.auth.uid));
    }

    function hasPatientConsent(orgId, patientId) {
        // Patients implicitly consent to their own data.
        // For professionals, check the consent flag on the patient's membership doc for that org.
        return isOwner(patientId) || getPatientMembership(orgId, patientId).data.consent.shareRecords == true;
    }
    
    function isAdmin() {
      return hasRoleInOrg('digihealth-admin', 'admin');
    }


    // --- GLOBAL COLLECTIONS ---

    match /users/{userId} {
      allow create: if isSignedIn();
      allow read, update: if isOwner(userId);
      allow list, delete: if isAdmin();
      
      // User-private subcollections
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      match /role_applications/{applicationId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /role_removal_requests/{requestId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /patients/{patientId} {
      allow create, update: if isOwner(patientId);
      allow get: if isOwner(patientId) || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.length > 1);
      
      // Patient-private subcollections
      match /record_files/{fileId} {
        allow read, write: if isOwner(patientId);
      }
      match /vitals/{vitalId} {
        allow create: if isOwner(patientId);
        allow read: if isOwner(patientId) || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.length > 1);
      }
      match /privacy_log/{logId} {
        allow get, list: if isOwner(patientId);
        allow create: if isSignedIn();
      }
    }
    
    match /stats/{statId} {
        allow get: if true;
        allow write: if false; 
    }

    // --- ORGANIZATION-SCOPED COLLECTIONS (NON-GROUP QUERIES) ---

    match /organizations/{orgId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.ownerId);
      allow update: if isOwner(resource.data.ownerId);
      
        match /invoices/{invoiceId} {
            allow read: if isOwner(resource.data.patientId) || hasRoleInOrg(orgId, 'manager');
            allow write: if hasRoleInOrg(orgId, 'manager');
            match /items/{itemId} {
                allow read: if isOwner(get(parent).data.patientId) || hasRoleInOrg(orgId, 'manager');
                allow write: if hasRoleInOrg(orgId, 'manager');
            }
        }
        match /admissions/{admissionId} {
            allow read: if isOwner(resource.data.patientId) || isMemberOfOrg(orgId);
            allow write: if hasRoleInOrg(orgId, 'manager') || hasRoleInOrg(orgId, 'nurse');
        }
        match /lab_test_orders/{orderId} {
            allow create: if hasRoleInOrg(orgId, 'doctor');
            allow read: if isMemberOfOrg(orgId);
            allow update: if hasRoleInOrg(orgId, 'doctor') || hasRoleInOrg(orgId, 'lab_technician');
            match /results/{resultId} {
                allow create: if hasRoleInOrg(orgId, 'lab_technician');
                allow read: if isMemberOfOrg(orgId) || isOwner(get(/databases/$(database)/documents/organizations/$(orgId)/lab_test_orders/$(orderId)).data.patientId);
                allow update: if hasRoleInOrg(orgId, 'lab_technician');
            }
        }
        match /facilities/{docId} {
            allow read: if isMemberOfOrg(orgId);
            allow write: if hasRoleInOrg(orgId, 'hospital_owner');
        }
        match /inventory/{itemId} {
            allow read: if isMemberOfOrg(orgId);
            allow write: if hasRoleInOrg(orgId, 'manager');
            match /stock_logs/{logId} {
                allow read: if hasRoleInOrg(orgId, 'manager');
                allow create: if hasRoleInOrg(orgId, 'manager');
            }
        }
        match /settlements/{settlementId} {
            allow create: if hasRoleInOrg(orgId, 'manager');
            allow read: if hasRoleInOrg(orgId, 'manager') || hasRoleInOrg(orgId, 'hospital_owner');
            allow update: if hasRoleInOrg(orgId, 'hospital_owner');
        }
        match /rosters/{rosterId} {
            allow write: if hasRoleInOrg(orgId, 'manager');
            allow read: if hasRoleInOrg(orgId, 'manager') || isOwner(resource.data.userId);
        }
    }
    
    // === COLLECTION GROUP RULES ===

    // A user can read their own memberships across all organizations
    match /{path=**}/members/{userId} {
      allow read: if isOwner(userId);
      // Create, update, delete must be scoped to an organization for role-based security
      allow create: if hasRoleInOrg(path[1], 'manager');
      allow update: if 
          (hasRoleInOrg(path[1], 'manager') && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['roles', 'status', 'userName', 'userHealthId', 'employeeDetails'])) ||
          (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['consent']));
      allow delete: if hasRoleInOrg(path[1], 'manager');
    }

    // A user can read their own medical records across all organizations
    match /{path=**}/records/{recordId} {
        allow read: if resource.data.patientId == request.auth.uid || (hasRoleInOrg(path[1], 'doctor') && hasPatientConsent(path[1], resource.data.patientId));
        allow write: if hasRoleInOrg(path[1], 'doctor');
    }
    
    // A user can read their own appointments across all organizations
    match /{path=**}/appointments/{appointmentId} {
      allow create: if isMemberOfOrg(path[1]); // Must be member of the org to create an appointment
      allow read, update: if resource.data.patientId == request.auth.uid || hasRoleInOrg(path[1], 'front_desk');
    }
    
    // Any signed-in user can list schedules (for booking)
    match /{path=**}/schedules/{scheduleId} {
        allow read: if isSignedIn();
        allow write: if hasRoleInOrg(path[1], 'hospital_owner');
    }
    
    // Role Applications are global for admins, but also private to the user
    match /{path=**}/role_applications/{applicationId} {
      allow read, write: if isOwner(path[1]) || isAdmin();
    }
    
    // Role Removal Requests are global for admins, but also private to the user
    match /{path=**}/role_removal_requests/{requestId} {
      allow read, write: if isOwner(path[1]) || isAdmin();
    }
  }
}
